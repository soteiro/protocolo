---
import Layout from "@layouts/Layout.astro";
import SlideButtons from "@components/SlideButtons.astro";

---
<Layout>
	<div class="h-screen flex flex-col bg-white relative overflow-hidden">
		<!-- Fondo con patr√≥n geom√©trico -->
		<div class="absolute inset-0 bg-gradient-to-br from-blue-600 to-indigo-700"></div>
		<div class="absolute inset-0 opacity-10">
			<div class="absolute top-0 left-0 w-full h-full"
				 style="background-image: radial-gradient(circle at 25% 25%, white 2px, transparent 2px); background-size: 60px 60px;">
			</div>
		</div>

		<!-- Contenido principal -->
		<div class="flex-1 flex items-center justify-center relative z-10 px-8">
			<div class="max-w-6xl w-full grid lg:grid-cols-2 gap-16 items-center">
				
				<!-- Columna izquierda: T√≠tulo principal -->
				<div class="text-white space-y-6" id="main-section">
					<div class="flex items-center space-x-4 mb-8" id="header-badge">
						<div class="w-12 h-12 bg-indigo-500 rounded-lg flex items-center justify-center">
							<svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"/>
								<path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z"/>
							</svg>
						</div>
						<span class="text-blue-200 text-sm font-medium uppercase tracking-wider">P√°gina 7</span>
					</div>
					
					<h1 class="text-5xl lg:text-6xl font-bold leading-tight" id="main-title">
						Protocolo<br>
						<span class="text-blue-200">Completo</span>
					</h1>
					
					<p class="text-xl text-blue-100 leading-relaxed max-w-lg" id="subtitle">
						Resumen de roles y responsabilidades en el protocolo de emergencia
					</p>
				</div>

				<!-- Columna derecha: Contenido informativo -->
				<div class="space-y-4" id="content-section">
					<!-- Secci√≥n Estudiantes -->
					<div class="bg-white rounded-2xl p-6 shadow-2xl" id="main-card">
						<h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
							<span class="text-xl mr-3">üë®‚Äçüéì</span>
							Estudiantes
						</h2>
						<div class="space-y-2">
							<div class="bg-gray-50 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Mantener la calma y no aglomerarse</p>
							</div>
							<div class="bg-gray-50 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Seguir las instrucciones del docente</p>
							</div>
							<div class="bg-gray-50 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Prestar ayuda si se solicita y se sienten capacitados</p>
							</div>
							<div class="bg-gray-50 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Informar inmediatamente al docente sobre lo ocurrido</p>
							</div>
							<div class="bg-gray-50 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Participar en investigaciones si se requiere testimonio</p>
							</div>
						</div>
					</div>

					<!-- Secci√≥n Docente -->
					<div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl p-6 border border-blue-200" id="case-card">
						<h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
							<span class="text-xl mr-3">üë®‚Äçüè´</span>
							Docente - Primer Respondiente
						</h3>
						<div class="space-y-2">
							<div class="bg-white/60 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Evaluar r√°pidamente la situaci√≥n y seguridad del entorno</p>
							</div>
							<div class="bg-white/60 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Asegurar el √°rea (cortar alimentaci√≥n, controlar derrames)</p>
							</div>
							<div class="bg-white/60 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Prestar primeros auxilios b√°sicos necesarios</p>
							</div>
							<div class="bg-white/60 rounded-lg p-3">
								<p class="text-gray-700 text-xs">‚Ä¢ Colaborar en la investigaci√≥n proporcionando informaci√≥n relevante</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Footer con indicadores y navegaci√≥n -->
		<div class="relative z-10 pb-6">
			<div class="flex items-center justify-between px-8">
				<!-- Indicadores de progreso -->
				<div class="flex space-x-2" id="progress-indicators">
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white rounded-full shadow-lg"></div>
				</div>

				<!-- N√∫mero de p√°gina -->
				<div class="text-white/80 text-sm font-medium">
					7 / 9
				</div>

				<!-- Botones de navegaci√≥n -->
				<div id="navigation-buttons">
					<SlideButtons urlNext="/8" urlBack="/6" />
				</div>
			</div>
		</div>
	</div>

	<!-- Scripts de animaci√≥n -->
	<script>
		import { gsap } from "gsap";

		function initAnimations() {
			const tl = gsap.timeline();

			tl.from("#header-badge", {
				x: -50,
				opacity: 0,
				duration: 0.8,
				ease: "power3.out"
			})
			.from("#main-title", {
				y: 50,
				opacity: 0,
				duration: 1,
				ease: "power3.out"
			}, "-=0.4")
			.from("#subtitle", {
				y: 30,
				opacity: 0,
				duration: 0.8,
				ease: "power3.out"
			}, "-=0.5")
			.from("#main-card", {
				x: 100,
				opacity: 0,
				duration: 0.8,
				ease: "power3.out"
			}, "-=0.6")
			.from("#case-card", {
				x: 100,
				opacity: 0,
				duration: 0.8,
				ease: "power3.out"
			}, "-=0.4")
			.from("#progress-indicators div", {
				scale: 0,
				duration: 0.4,
				stagger: 0.1,
				ease: "back.out(1.7)"
			}, "-=0.3")
			.from("#navigation-buttons", {
				y: 20,
				opacity: 0,
				duration: 0.6,
				ease: "power2.out"
			}, "-=0.2");

			const cards = document.querySelectorAll("#main-card, #case-card");
			cards.forEach(card => {
				card.addEventListener("mouseenter", () => {
					gsap.to(card, { y: -5, scale: 1.02, duration: 0.3, ease: "power2.out" });
				});
				card.addEventListener("mouseleave", () => {
					gsap.to(card, { y: 0, scale: 1, duration: 0.3, ease: "power2.out" });
				});
			});

			gsap.to("#header-badge .bg-indigo-500", {
				scale: 1.05, duration: 2, ease: "power2.inOut", yoyo: true, repeat: -1
			});
		}

		document.addEventListener("DOMContentLoaded", initAnimations);
	</script>
</Layout>