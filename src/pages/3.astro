---
import Layout from "@layouts/Layout.astro";
import SlideButtons from "@components/SlideButtons.astro";
---

<Layout>
	<div class="h-screen flex flex-col bg-white relative overflow-hidden">
		<!-- Fondo con patr√≥n geom√©trico -->
		<div class="absolute inset-0 bg-gradient-to-br from-blue-600 to-indigo-700"></div>
		<div class="absolute inset-0 opacity-10">
			<div class="absolute top-0 left-0 w-full h-full"
				 style="background-image: radial-gradient(circle at 25% 25%, white 2px, transparent 2px); background-size: 60px 60px;">
			</div>
		</div>

		<!-- Contenido principal -->
		<div class="flex-1 flex items-center justify-center relative z-10 px-8">
			<div class="max-w-6xl w-full grid lg:grid-cols-2 gap-16 items-center">
				
				<!-- Columna izquierda: T√≠tulo principal -->
				<div class="text-white space-y-6" id="main-section">
					<div class="flex items-center space-x-4 mb-8" id="header-badge">
						<div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
							<svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
							</svg>
						</div>
						<span class="text-blue-200 text-sm font-medium uppercase tracking-wider">P√°gina 3</span>
					</div>
					
					<h1 class="text-5xl lg:text-6xl font-bold leading-tight" id="main-title">
						Factores de<br>
						<span class="text-blue-200">Riesgo</span>
					</h1>
					
					<p class="text-xl text-blue-100 leading-relaxed max-w-lg" id="subtitle">
						Identificaci√≥n de los elementos que contribuyeron al accidente
					</p>
				</div>

				<!-- Columna derecha: Contenido informativo -->
				<div class="space-y-4" id="content-section">
					<!-- Tarjeta principal -->
					<div class="bg-white rounded-2xl p-5 shadow-2xl" id="main-card">
						<h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
							<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center mr-3">
								<svg class="w-4 h-4 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
								</svg>
							</div>
							Factores de Riesgo Identificados
						</h2>
					</div>

					<!-- Grid de factores de riesgo -->
					<div class="grid grid-cols-1 gap-3" id="case-card">
						<div class="bg-gradient-to-r from-red-50 to-pink-50 rounded-xl p-4 border border-red-200">
							<div class="flex items-start space-x-3">
								<span class="text-lg">üîå</span>
								<div>
									<h3 class="font-bold text-gray-800 text-sm">Error de Conexi√≥n</h3>
									<p class="text-gray-600 text-xs">Conexi√≥n del capacitor con polaridad invertida</p>
								</div>
							</div>
						</div>

						<div class="bg-gradient-to-r from-yellow-50 to-amber-50 rounded-xl p-4 border border-yellow-200">
							<div class="flex items-start space-x-3">
								<span class="text-lg">‚ö°</span>
								<div>
									<h3 class="font-bold text-gray-800 text-sm">Sobretensi√≥n</h3>
									<p class="text-gray-600 text-xs">Aplicaci√≥n de voltaje excesivo al componente</p>
								</div>
							</div>
						</div>

						<div class="bg-gradient-to-r from-orange-50 to-red-50 rounded-xl p-4 border border-orange-200">
							<div class="flex items-start space-x-3">
								<span class="text-lg">‚ùå</span>
								<div>
									<h3 class="font-bold text-gray-800 text-sm">Falta de Verificaci√≥n</h3>
									<p class="text-gray-600 text-xs">No se realiz√≥ prueba o revisi√≥n del circuito antes de aplicar tensi√≥n</p>
								</div>
							</div>
						</div>

						
					</div>
				</div>
			</div>
		</div>

		<!-- Footer con indicadores y navegaci√≥n -->
		<div class="relative z-10 pb-6">
			<div class="flex items-center justify-between px-8">
				<!-- Indicadores de progreso -->
				<div class="flex space-x-2" id="progress-indicators">
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white rounded-full shadow-lg"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
					<div class="w-3 h-3 bg-white/40 rounded-full"></div>
          <div class="w-3 h-3 bg-white/40 rounded-full"></div>
          <div class="w-3 h-3 bg-white/40 rounded-full"></div>
				</div>

				<!-- N√∫mero de p√°gina -->
				<div class="text-white/80 text-sm font-medium">
					3 / 7
				</div>

				<!-- Botones de navegaci√≥n -->
				<div id="navigation-buttons">
					<SlideButtons urlNext="/3-1" urlBack="/2" />
				</div>
			</div>
		</div>
	</div>

	<!-- Scripts de animaci√≥n -->
	<script>
		import { gsap } from "gsap";

		// Funci√≥n para inicializar las animaciones
		function initAnimations() {
			// Timeline principal
			const tl = gsap.timeline();

			// Animaci√≥n del badge del header
			tl.from("#header-badge", {
				x: -50,
				opacity: 0,
				duration: 0.8,
				ease: "power3.out"
			})

			// Animaci√≥n del t√≠tulo principal
			.from("#main-title", {
				y: 50,
				opacity: 0,
				duration: 1,
				ease: "power3.out"
			}, "-=0.4")

			// Animaci√≥n del subt√≠tulo
			.from("#subtitle", {
				y: 30,
				opacity: 0,
				duration: 0.8,
				ease: "power3.out"
			}, "-=0.5")

			// Animaci√≥n de la tarjeta principal
			.from("#main-card", {
				x: 100,
				opacity: 0,
				duration: 0.8,
				ease: "power3.out"
			}, "-=0.6")

			// Animaci√≥n de las tarjetas de factores de riesgo
			.from("#case-card > div", {
				x: 100,
				opacity: 0,
				duration: 0.6,
				stagger: 0.1,
				ease: "power3.out"
			}, "-=0.4")

			// Animaci√≥n de los indicadores de progreso
			.from("#progress-indicators div", {
				scale: 0,
				duration: 0.4,
				stagger: 0.1,
				ease: "back.out(1.7)"
			}, "-=0.3")

			// Animaci√≥n de los botones de navegaci√≥n
			.from("#navigation-buttons", {
				y: 20,
				opacity: 0,
				duration: 0.6,
				ease: "power2.out"
			}, "-=0.2");

			// Animaciones de hover para las tarjetas
			const cards = document.querySelectorAll("#main-card, #case-card > div");
			cards.forEach(card => {
				card.addEventListener("mouseenter", () => {
					gsap.to(card, {
						y: -3,
						scale: 1.02,
						duration: 0.3,
						ease: "power2.out"
					});
				});

				card.addEventListener("mouseleave", () => {
					gsap.to(card, {
						y: 0,
						scale: 1,
						duration: 0.3,
						ease: "power2.out"
					});
				});
			});

			// Animaci√≥n de respiraci√≥n para el badge principal
			gsap.to("#header-badge .bg-orange-500", {
				scale: 1.05,
				duration: 2,
				ease: "power2.inOut",
				yoyo: true,
				repeat: -1
			});
		}

		// Inicializar cuando el DOM est√© listo
		document.addEventListener("DOMContentLoaded", initAnimations);
	</script>
</Layout>
