---
import { ClientRouter } from "astro:transitions"; 
import "@styles/global.css";

export interface Props {
	title?: string;
	slideNumber?: number;
	totalSlides?: number;
}

const { title = "Protocolo de Accidente", slideNumber = 1, totalSlides = 10 } = Astro.props;
---

<!doctype html>
<html lang="es" transition:name="root" transition:animate="fade">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<ClientRouter />
		<link rel="icon" type="image" href="/src/assets/logo.png" />
		<title>{title}</title>
		
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: #333;
				overflow: hidden;
			}

			.presentation-container {
				width: 100vw;
				height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;
			}

			.slide {
				width: 90vw;
				max-width: 1000px;
				height: 80vh;
				background: white;
				border-radius: 20px;
				box-shadow: 0 20px 40px rgba(0,0,0,0.3);
				display: flex;
				flex-direction: column;
				padding: 40px;
				overflow-y: auto;
				position: relative;
				animation: slideIn 0.5s ease-in-out;
			}

			@keyframes slideIn {
				from {
					opacity: 0;
					transform: translateX(50px);
				}
				to {
					opacity: 1;
					transform: translateX(0);
				}
			}

			.slide-header {
				background: linear-gradient(135deg, #ff6b6b, #ee5a24);
				color: white;
				padding: 20px;
				margin: -40px -40px 30px -40px;
				border-radius: 20px 20px 0 0;
				text-align: center;
			}

			.slide-title {
				font-size: 2.2em;
				font-weight: bold;
				margin-bottom: 10px;
			}

			.slide-subtitle {
				font-size: 1.1em;
				opacity: 0.9;
			}

			.content {
				flex: 1;
				font-size: 1.1em;
				line-height: 1.6;
			}

			.risk-factor, .step, .responsibility {
				margin: 15px 0;
				padding: 15px;
				background: #f8f9fa;
				border-left: 4px solid #667eea;
				border-radius: 8px;
				transition: transform 0.2s;
			}

			.risk-factor:hover, .step:hover, .responsibility:hover {
				transform: translateX(5px);
			}

			.emergency-box {
				background: linear-gradient(135deg, #ff6b6b, #ee5a24);
				color: white;
				padding: 20px;
				border-radius: 12px;
				margin: 20px 0;
				font-weight: bold;
				text-align: center;
			}

			.controls {
				position: fixed;
				bottom: 30px;
				left: 50%;
				transform: translateX(-50%);
				display: flex;
				gap: 15px;
				z-index: 1000;
			}

			.btn {
				padding: 12px 24px;
				background: white;
				border: none;
				border-radius: 50px;
				cursor: pointer;
				font-size: 16px;
				font-weight: bold;
				color: #667eea;
				box-shadow: 0 5px 15px rgba(0,0,0,0.2);
				transition: all 0.3s;
				text-decoration: none;
				display: inline-block;
			}

			.btn:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(0,0,0,0.3);
			}

			.btn:disabled {
				opacity: 0.5;
				cursor: not-allowed;
			}

			.slide-counter {
				position: fixed;
				top: 30px;
				right: 30px;
				background: rgba(255,255,255,0.9);
				padding: 10px 20px;
				border-radius: 20px;
				font-weight: bold;
				color: #667eea;
			}

			ul {
				margin: 15px 0;
				padding-left: 20px;
			}

			li {
				margin: 10px 0;
			}

			.highlight {
				background: #fff3cd;
				padding: 15px;
				border-radius: 8px;
				border-left: 4px solid #ffc107;
				margin: 15px 0;
			}

			.case-study {
				background: #d1ecf1;
				padding: 20px;
				border-radius: 8px;
				border-left: 4px solid #17a2b8;
				margin: 20px 0;
			}

			.section-title {
				color: #667eea;
				font-size: 1.4em;
				font-weight: bold;
				margin: 25px 0 15px 0;
				border-bottom: 2px solid #667eea;
				padding-bottom: 8px;
			}
		</style>
	</head>
	<body>
		<div class="presentation-container">
			<div class="slide">
				<slot />
			</div>
		</div>

		<div class="slide-counter">
			{slideNumber} / {totalSlides}
		</div>

		<slot name="navigation" />
	</body>
</html>
